<!--<div id="modal-backdrop" class="hidden"></div>-->
<div id="choose-categories-modal" class="hidden">
  <div class="modal-category">

    <div id="category-header" class="modal-header">
      <h3>Choose categories</h3>
      <button type="button" id="category-close" class="modal-hide-button">&times;</button>
    </div>

    <div id="category-body" class="modal-body">

      <div id="category-types"  class="post-input-element">
        <fieldset id="category-selection-fieldset" class="post-fieldset"><!--what does the class post-fieldset do?-->
          <div>

              <input class="categ-option" type="checkbox" name="category-type" id="search-engines" value="SearchEngines" {{#if SearchEngines}} checked {{/if}}><!-- I don't know if the id and value should have hyphens -->
            <label for="category-search-engines">Search Engines</label>
          </div>
          <div>
            <input class="categ-option" type="checkbox" name="category-type" id="shopping" value="shopping" {{#if Shopping}} checked {{/if}}>
            <label for="category-shopping">Shopping</label>
          </div>
          <div>
            <input class="categ-option" type="checkbox" name="category-type" id="games" value="games" {{#if Games}} checked {{/if}}>
            <label for="category-games">Games</label>
          </div><div>
            <input class="categ-option" type="checkbox" name="category-type" id="social-media" value="SocialMedia" {{#if SocialMedia}} checked {{/if}}>
            <label for="category-social-media">Social Media</label>
          </div><div>
            <input class="categ-option" type="checkbox" name="category-type" id="educational" value="Educational" {{#if Educational}} checked {{/if}}>
            <label for="category-educational">Educationalr</label>
          </div><div>
            <input class="categ-option" type="checkbox" name="category-type" id="interesting" value="Interesting" {{#if Interesting}} checked {{/if}}>
            <label for="category-interesting">Interesting</label>
          </div><div>
            <input class="categ-option" type="checkbox" name="category-type" id="streaming-sites" value="StreamingSites" {{#if StreamingSites}} checked {{/if}}>
            <label for="category-streaming-sites">Streaming Sites</label>
          </div><div>
            <input class="categ-option" type="checkbox" name="category-type" id="wikis" value="Wikis" {{#if Wikis}} checked {{/if}}>
            <label for="category-wikis">Wikis</label>
          </div><div>
            <input class="categ-option" type="checkbox" name="category-type" id="funny" value="Funny" {{#if Funny}} checked {{/if}}>
            <label for="category-funny">Funny</label>
          </div>
        </fieldset>
      </div>

    </div>

    <div class="modal-footer">
      <button type="button" id="categ-modal-cancel" class="modal-hide-button action-button">Close</button>
      <button type="button" id="categ-modal-accept" class="action-button">Apply</button>
    </div>

  </div>

</div>
